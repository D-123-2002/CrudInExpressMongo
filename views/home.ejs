<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users List</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.
    min.js"></script>
</head>
<body>
    <div class="container mt-5">
       <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Users List</h2>
        <a href="/add-contact" class="btn btn-primary">
            <i class="bi bi-person-add"></i>Add New Contact</a>
       </div> 
       <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <td>S.No.</td>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% var sno=1 %>
            <% contacts.forEach(contact=>{%>
            <tr>
                <td><%= sno++ %></td>
                <td><%= contact.first_name %></td>
                <td><%= contact.last_name %></td>
                <td><%= contact.email %></td>
                <td><%= contact.phone %></td>
                <td>
                    <a href="/show-contact/<%= contact._id %>" class="text-info me-2" title="Show">
                        <i class="bi bi-eye-fill"></i>
                    </a>
                    
                    <a href="/update-contact/<%= contact._id %>" class="text-warning me-2" title="Edit">
                        <i class="bi bi-pencil-fill"></i>
                    </a>
                    
                    <a href="/delete-contact/<%= contact._id %>" class="text-danger me-2" title="Delete">
                        <i class="bi bi-trash-fill"></i>
                    </a>
                </td>
            </tr>
            <%});%>
        </tbody>
       </table>
    </div>
</body>
</html>